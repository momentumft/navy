{
  "private": true,
  "description": "This is a monorepo. Check packages/navy for the main navy package.",
  "options": {
    "cucumber": "--strict --fail-fast -r ./preload.js -r ./environment.js -r ./hooks.js -r ./chai.js -r ./features -r ./steps ./features",
    "mocha": "--compilers js:babel-register packages/*/src/{,**}/__tests__/*.js"
  },
  "scripts": {
    "build": "./scripts/build.sh",
    "watch": "./scripts/watch.sh",
    "integration": "cd test/integration && cucumberjs $npm_package_options_cucumber",
    "lint": "eslint .",
    "flow": "flow",
    "unit": "mocha $npm_package_options_mocha",
    "unit-watch": "mocha -w $npm_package_options_mocha",
    "test": "./scripts/test.sh",
    "prepublish": "npm run build && npm run webpack-build",
    "publish": "lerna publish",
    "publish-rc": "NPM_DIST_TAG=next npm run publish",
    "bootstrap": "lerna bootstrap && rm -rf packages/navy-cli/node_modules/navy && ln -s ../../navy packages/navy-cli/node_modules",
    "updated": "lerna updated",
    "webpack-build": "NODE_ENV=production webpack && chmod +x packages/navy-cli/bin/navy.js",
    "webpack-watch": "webpack -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/momentumft/navy.git"
  },
  "author": "Momentum Financial Technology Ltd",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-eslint": "^6.0.2",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-flow-strip-types": "^6.7.0",
    "babel-plugin-transform-runtime": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "babel-runtime": "^6.6.1",
    "chai": "^3.5.0",
    "chai-properties": "^1.2.1",
    "cucumber": "^0.10.2",
    "eslint": "^2.7.0",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-flow-vars": "^0.3.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "flow-bin": "^0.28.0",
    "json-loader": "^0.5.4",
    "lerna": "2.0.0-beta.24",
    "lodash": "^4.11.1",
    "mocha": "^2.5.3",
    "node-fetch": "^1.5.3",
    "pty.js": "^0.3.0",
    "rimraf": "^2.5.2",
    "strip-ansi": "^3.0.1",
    "webpack": "^1.13.1"
  }
}
